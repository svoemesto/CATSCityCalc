<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.svoemestodev.catscitycalc">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_catscalcicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ic_catscalcicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity android:name=".activities.EditTeamActivity"
            android:screenOrientation="portrait"
            />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <activity
            android:name=".activities.TeamActivity"
            android:screenOrientation="portrait"
            android:label="@string/team" />
        <activity
            android:name=".activities.UserActivity"
            android:screenOrientation="portrait"
            android:label="@string/open_login" />
        <activity android:name=".activities.CarActivity" />
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GameActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.ColorsdetectActivity"
            android:screenOrientation="portrait"
            android:label="@string/sett_colors" />
        <activity
            android:name=".activities.BordersActivity"
            android:screenOrientation="portrait"
            android:label="@string/sett_borders" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2870168293382158~9528759362" />

        <activity
            android:name=".activities.CalibrateActivity"
            android:screenOrientation="portrait"
            android:label="@string/sett_calibrate_center_screen" />
        <activity
            android:name=".activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:label="@string/settings" />
        <activity
            android:name=".activities.StrategyActivity"
            android:screenOrientation="portrait"
            android:label="@string/strategic_planning" />
    </application>

</manifest>