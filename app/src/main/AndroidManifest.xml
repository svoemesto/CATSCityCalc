<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.svoemestodev.catscitycalc">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_catscalcicon"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/ic_catscalcicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Splash"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LanguageActivity"
            android:label="@string/sett_language"/>

        <activity
            android:name=".StrategyActivity"
            android:label="@string/sett_strategy"/>

        <activity
            android:name=".GameActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleInstance">
<!--            <meta-data-->
<!--                android:name="com.google.android.gms.vision.DEPENDENCIES"-->
<!--                android:value="orc" />-->

        </activity>
        <activity
            android:name=".ColorsdetectActivity"
            android:label="@string/sett_colors" />
        <activity
            android:name=".BordersActivity"
            android:label="@string/sett_borders" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2870168293382158~9528759362" />

        <activity
            android:name=".CalibrateActivity"
            android:label="@string/sett_calibrate_center_screen" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings" />
    </application>

</manifest>