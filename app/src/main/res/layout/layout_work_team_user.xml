<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ltu_tv_nic_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ltu_tv_nic_value"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/ltu_ib_car1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="openCar1"
                        android:scaleType="fitCenter"
                        />

                    <ImageView
                        android:id="@+id/ltu_iv_car1_building_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/ltu_iv_car1_task_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignBottom="@id/ltu_ib_car1"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/ltu_tv_car1_repair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"/>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/ltu_ib_car2"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="openCar2"
                        android:scaleType="fitCenter"
                        />

                    <ImageView
                        android:id="@+id/ltu_iv_car2_building_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/ltu_iv_car2_task_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignBottom="@id/ltu_ib_car2"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/ltu_tv_car2_repair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"/>

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/ltu_ib_car3"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="openCar3"
                        android:scaleType="fitCenter"
                        />

                    <ImageView
                        android:id="@+id/ltu_iv_car3_building_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/ltu_iv_car3_task_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignBottom="@id/ltu_ib_car3"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/ltu_tv_car3_repair"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        android:gravity="center_horizontal|center_vertical"/>

                </RelativeLayout>


            </LinearLayout>



        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
