<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ltu_tv_nic_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/ltu_tv_nic_value"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical">

                    <ImageButton
                        android:id="@+id/ltu_ib_car1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:onClick="openCar1"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_car1_blue"
                        />

                    <ImageView
                        android:id="@+id/ltu_iv_car1_building_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_bfx_blue"
                        />

                    <ImageView
                        android:id="@+id/ltu_iv_car1_task_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignBottom="@id/ltu_ib_car1"
                        android:scaleType="fitCenter"
                        tools:src="@drawable/ic_bfx_blue"
                        />

                    <LinearLayout
                        android:id="@+id/ltu_ll_car1_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/ltu_ib_car1"
                        android:layout_toEndOf="@id/ltu_iv_car1_task_icon"
                        android:gravity="center_horizontal|center_vertical"
                        >

                        <TextView
                            android:id="@+id/ltu_tv_car1_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            tools:text="Car #1"
                            android:background="@drawable/rounded_corner_gray"
                            android:gravity="center_horizontal|center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@id/ltu_iv_car1_building_icon"
                        android:gravity="center_horizontal|center_vertical"
                        >

                        <TextView
                            android:id="@+id/ltu_tv_car1_repair"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            tools:text="01ч59м"
                            android:background="@drawable/rounded_corner_red"
                            android:gravity="center_horizontal|center_vertical" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/ltu_ll_car1_name"
                        android:layout_toEndOf="@id/ltu_iv_car1_task_icon"
                        android:gravity="end"
                        >

                        <TextView
                            android:id="@+id/ltu_tv_car1_health_shield"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="10dp"
                            android:textColor="#000000"
                            android:textSize="8sp"
                            android:background="@drawable/rounded_corner_yellow"
                            android:gravity="center_horizontal|center_vertical"
                            tools:text="12536/56987"
                            />

                    </LinearLayout>
                    
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
