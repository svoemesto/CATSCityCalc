<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/ga_rl_game"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".activities.GameActivity"
    android:background="@drawable/white"
    >

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ga_ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_ga_unit_id"
        />

    <ScrollView
        android:id="@+id/ga_sv_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ga_ad_banner"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/ga_tv_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/ga_tv_screenshot_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <Switch
                android:id="@+id/ga_sw_listen_new_file"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:text="@string/sett_listen_files_in_screenshot_folder"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageButton
                            android:id="@+id/ga_ib_car1"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:onClick="openCar1"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_car1_blue"
                            />

                        <ImageView
                            android:id="@+id/ga_iv_car1_building_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_bfx_blue"/>


                        <ImageView
                            android:id="@+id/ga_iv_car1_task_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignBottom="@id/ga_ib_car1"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="0dp"
                            android:layout_marginBottom="1dp"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_bfx_blue"/>

                        <LinearLayout
                            android:id="@+id/ga_ll_car1_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/ga_ib_car1"
                            android:layout_toEndOf="@id/ga_iv_car1_task_icon"
                            android:gravity="center_horizontal|center_vertical"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car1_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@drawable/rounded_corner_gray"
                                android:gravity="center_horizontal|center_vertical"
                                android:paddingHorizontal="10dp"
                                android:textColor="#000000"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                tools:text="Car #1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@id/ga_iv_car1_building_icon"
                            android:gravity="center_horizontal|center_vertical"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car1_repair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                tools:text="01ч59м"
                                android:background="@drawable/rounded_corner_red"
                                android:gravity="center_horizontal|center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/ga_ll_car1_name"
                            android:layout_toEndOf="@id/ga_iv_car1_task_icon"
                            android:gravity="end"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car1_health_shield"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#000000"
                                android:textSize="8sp"
                                android:background="@drawable/rounded_corner_yellow"
                                android:gravity="center_horizontal|center_vertical"
                                tools:text="12536/56987"
                                />

                        </LinearLayout>

                    </RelativeLayout>

                    
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageButton
                            android:id="@+id/ga_ib_car2"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:onClick="openCar2"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_car2_blue"
                            />

                        <ImageView
                            android:id="@+id/ga_iv_car2_building_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_bfx_blue"/>

                        <ImageView
                            android:id="@+id/ga_iv_car2_task_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignBottom="@id/ga_ib_car2"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_bfx_blue"/>


                        <LinearLayout
                            android:id="@+id/ga_ll_car2_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/ga_ib_car2"
                            android:layout_toEndOf="@id/ga_iv_car2_task_icon"
                            android:gravity="center_horizontal|center_vertical"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car2_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                tools:text="Car #2"
                                android:background="@drawable/rounded_corner_gray"
                                android:gravity="center_horizontal|center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@id/ga_iv_car2_building_icon"
                            android:gravity="center_horizontal|center_vertical"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car2_repair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                tools:text="01ч59м"
                                android:background="@drawable/rounded_corner_red"
                                android:gravity="center_horizontal|center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/ga_ll_car2_name"
                            android:layout_toEndOf="@id/ga_iv_car2_task_icon"
                            android:gravity="end"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car2_health_shield"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#000000"
                                android:textSize="8sp"
                                android:background="@drawable/rounded_corner_yellow"
                                android:gravity="center_horizontal|center_vertical"
                                tools:text="12536/56987"
                                />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical">

                        <ImageButton
                            android:id="@+id/ga_ib_car3"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:onClick="openCar3"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_car3_blue"
                            />

                        <ImageView
                            android:id="@+id/ga_iv_car3_building_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_bfx_blue"/>

                        <ImageView
                            android:id="@+id/ga_iv_car3_task_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignBottom="@id/ga_ib_car3"
                            android:scaleType="fitCenter"
                            tools:src="@drawable/ic_bfx_blue"/>


                        <LinearLayout
                            android:id="@+id/ga_ll_car3_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/ga_ib_car3"
                            android:layout_toEndOf="@id/ga_iv_car3_task_icon"
                            android:gravity="center_horizontal|center_vertical"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car3_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                tools:text="Car #3"
                                android:background="@drawable/rounded_corner_gray"
                                android:gravity="center_horizontal|center_vertical" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@id/ga_iv_car3_building_icon"
                            android:gravity="center_horizontal|center_vertical"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car3_repair"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                tools:text="01ч59м"
                                android:background="@drawable/rounded_corner_red"
                                android:gravity="center_horizontal|center_vertical" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@id/ga_ll_car3_name"
                            android:layout_toEndOf="@id/ga_iv_car3_task_icon"
                            android:gravity="end"
                            >

                            <TextView
                                android:id="@+id/ga_tv_car3_health_shield"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="10dp"
                                android:textColor="#000000"
                                android:textSize="8sp"
                                android:background="@drawable/rounded_corner_yellow"
                                android:gravity="center_horizontal|center_vertical"
                                tools:text="12536/56987"
                                />

                        </LinearLayout>

                    </RelativeLayout>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ga_tv_start_game_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/ga_tv_end_game_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ga_iv_our_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/ga_tv_vs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="@string/versus"/>

                <ImageView
                    android:id="@+id/ga_iv_enemy_team_name"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ga_tv_our_increase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="#4179d8" />

                    <TextView
                        android:id="@+id/ga_tv_our_points"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:gravity="start|center_vertical"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="#4179d8"
                        android:background="#f0f0f0" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ga_tv_total_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="#4e6881" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ga_tv_enemy_points"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingEnd="10dp"
                        android:gravity="end|center_vertical"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="#eb4c48"
                        android:background="#f0f0f0" />

                    <TextView
                        android:id="@+id/ga_tv_enemy_increase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="#eb4c48" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ga_tv_our_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="#90b3eb" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ga_tv_early_win"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="#91a7bf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/ga_tv_enemy_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:background="#ff8e98" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/ga_iv_game_car_black"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:src="@drawable/ic_car_black_36dp"/>

                <TextView
                    android:id="@+id/ga_tv_game_slots"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    tools:text="123"
                    />

                <ImageView
                    android:id="@+id/ga_iv_game_car_our"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:src="@drawable/ic_car_our_36dp"/>

                <TextView
                    android:id="@+id/ga_tv_game_slots_our"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#4179d8"
                    tools:text="123"
                    />

                <ImageView
                    android:id="@+id/ga_iv_game_car_empty"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:src="@drawable/ic_car_empty_36dp"/>

                <TextView
                    android:id="@+id/ga_tv_game_slots_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#5e6a84"
                    tools:text="123"
                    />

                <ImageView
                    android:id="@+id/ga_iv_game_car_enemy"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    tools:visibility="visible"
                    android:src="@drawable/ic_car_enemy_36dp"/>

                <TextView
                    android:id="@+id/ga_tv_game_slots_enemy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="#ff6565"
                    tools:text="123"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/ga_tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black" />

            <include
                android:id="@+id/ga_in_buildings"
                layout="@layout/layout_game_buildings"/>

            <Button
                android:id="@+id/ga_bt_strategy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strategic_planning"
                android:visibility="invisible"
                tools:visibility="visible"
                android:onClick="openStrategyActivity"/>


            <TextView
                android:id="@+id/ga_tv_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/jet_brains_mono_regular"
                android:textColor="#000000"
                tools:text="Forecast"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>