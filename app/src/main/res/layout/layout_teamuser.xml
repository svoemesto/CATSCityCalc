<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ltu_bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_delete_forever_24"/>

        <ImageButton
            android:id="@+id/ltu_bt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_baseline_edit_24"/>

        <ImageButton
            android:id="@+id/ltu_bt_set_leader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ltu_bt_edit"
            android:src="@drawable/ic_baseline_star_24"/>

        <ImageButton
            android:id="@+id/ltu_bt_set_captain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ltu_bt_set_leader"
            android:src="@drawable/ic_baseline_star_half_24"/>

        <ImageButton
            android:id="@+id/ltu_bt_set_meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ltu_bt_set_captain"
            android:src="@drawable/ic_baseline_star_border_24"/>

        <TextView
            android:id="@+id/ltu_tv_nic_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ltu_bt_edit"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/ltu_tv_role_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ltu_bt_edit"
            android:gravity="end|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            />

    </RelativeLayout>
</LinearLayout>
