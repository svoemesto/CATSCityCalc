<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"

        >

        <ImageView
            android:id="@+id/iv_city"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            app:srcCompat="@drawable/stub_city"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_us"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_they"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/et_in_plus_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/et_in_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/et_in_plus_they"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_us"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_instance"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_they"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/et_in_total_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/et_in_instant_vic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

            <EditText
                android:id="@+id/et_in_total_they"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                />

        </LinearLayout>

        <Switch
            android:id="@+id/sw_listen_new_file"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Отслеживать файлы в папке скриншотов"
            />



        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/result"
            android:textSize="20sp"

            />

        <LinearLayout
            android:id="@+id/dbg_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dbg_tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debug mode"
                android:gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/dbg_tv_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File information"/>

            <TextView
                android:id="@+id/dbg_tv_file_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File information"/>

            <LinearLayout
                android:id="@+id/dbg_lay_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dbg_img_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stub_total_time"/>

                <TextView
                    android:id="@+id/dbg_tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Распознанное время"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dbg_lay_instance_vic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dbg_img_instance_vic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stub_instance_vic"/>

                <TextView
                    android:id="@+id/dbg_tv_instance_vic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Распознанное вол-во очков для победы"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dbg_lay_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dbg_img_us"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stub_total_us"/>

                <TextView
                    android:id="@+id/dbg_tv_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Распознанные наши очки"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dbg_lay_they"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dbg_img_they"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/stub_total_they"/>

                <TextView
                    android:id="@+id/dbg_tv_they"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Распознанные их очки"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
