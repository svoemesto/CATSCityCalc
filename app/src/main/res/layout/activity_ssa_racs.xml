<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ssa.SSA_Rules_Area_Condition_Activity">

    <Button
        android:id="@+id/assarac_bt_add_new_rac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new RAC"
        android:layout_alignParentBottom="true"
        android:onClick="addNewRAC"
        />

    <ListView
        android:id="@+id/assarac_lv_rac"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/assarac_bt_add_new_rac"/>

</RelativeLayout>