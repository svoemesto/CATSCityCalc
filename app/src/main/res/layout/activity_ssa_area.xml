<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ssa.SSA_Area_Activity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/assaae_ib_get_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_keyboard_24"
                    android:onClick="setKey"
                    />

                <TextView
                    android:id="@+id/assaae_tv_key_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="Area KEY:"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/assaae_tv_key_label"
                    android:layout_alignBottom="@+id/assaae_tv_key_label"
                    android:layout_toStartOf="@+id/assaae_tv_key_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/assaae_tv_key_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/assaae_ib_get_key"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/assaae_ib_get_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_keyboard_24"
                    android:onClick="setName"
                    />

                <TextView
                    android:id="@+id/assaae_tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="Area name:"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/assaae_tv_name_label"
                    android:layout_alignBottom="@+id/assaae_tv_name_label"
                    android:layout_toStartOf="@+id/assaae_tv_name_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/assaae_tv_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jet_brains_mono_regular"
                    android:textSize="18sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/assaae_ib_get_name"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/assaae_ib_get_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_round_open_in_browser_24"
                    android:onClick="setParent"
                    />

                <ImageButton
                    android:id="@+id/assaae_ib_reset_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/assaae_ib_get_parent"
                    android:src="@drawable/ic_round_cancel_24"
                    android:onClick="resetParent"
                    />

                <TextView
                    android:id="@+id/assaae_tv_parent_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="Area parent:"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/assaae_tv_parent_label"
                    android:layout_alignBottom="@+id/assaae_tv_parent_label"
                    android:layout_toStartOf="@+id/assaae_tv_parent_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/assaae_tv_parent_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jet_brains_mono_regular"
                    android:textSize="14sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/assaae_ib_reset_parent"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/assaae_tv_snap_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="Snap:"/>

                <RadioGroup
                    android:id="@+id/assaae_rg_snap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/assaae_tv_snap_label"
                    >
                    <RadioButton
                        android:id="@+id/assaae_rb_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Left"/>
                    <RadioButton
                        android:id="@+id/assaae_rb_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Center"/>
                    <RadioButton
                        android:id="@+id/assaae_rb_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Right"/>

                </RadioGroup>

            </RelativeLayout>


            
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/assaae_tv_x1_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/border_x1"/>

                    <TextView
                        android:id="@+id/assaae_tv_x1_value"
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:gravity="center_horizontal"
                        tools:text="-0.12345"
                        />

                    <SeekBar
                        android:id="@+id/assaae_sb_x1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="99"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/assaae_ib_x1_minus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep10"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_x1_minus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep1"
                            />
                        <ImageButton
                            android:id="@+id/assaae_ib_reset_x1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_to_default"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_x1_plus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep1"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_x1_plus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep10"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/assaae_tv_x2_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/border_x2"/>

                    <TextView
                        android:id="@+id/assaae_tv_x2_value"
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:gravity="center_horizontal"
                        tools:text="+0.12345"
                        />

                    <SeekBar
                        android:id="@+id/assaae_sb_x2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="1"
                        android:max="100"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/assaae_ib_x2_minus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep10"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_x2_minus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep1"
                            />
                        <ImageButton
                            android:id="@+id/assaae_ib_reset_x2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_to_default"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_x2_plus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep1"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_x2_plus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep10"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/assaae_tv_y1_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/border_y1"/>

                    <TextView
                        android:id="@+id/assaae_tv_y1_value"
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:gravity="center_horizontal"
                        tools:text="-0.12345"
                        />

                    <SeekBar
                        android:id="@+id/assaae_sb_y1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="0"
                        android:max="99"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/assaae_ib_y1_minus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep10"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_y1_minus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep1"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_reset_y1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_to_default"
                            />
                        <ImageButton
                            android:id="@+id/assaae_ib_y1_plus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep1"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_y1_plus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep10"
                            />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/assaae_tv_y2_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/border_y2"/>

                    <TextView
                        android:id="@+id/assaae_tv_y2_value"
                        android:layout_width="match_parent"
                        android:layout_height="36sp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/jet_brains_mono_regular"
                        android:gravity="center_horizontal"
                        tools:text="+0.12345"
                        />

                    <SeekBar
                        android:id="@+id/assaae_sb_y2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:min="1"
                        android:max="100"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/assaae_ib_y2_minus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep10"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_y2_minus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_backstep1"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_reset_y2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_to_default"
                            />
                        <ImageButton
                            android:id="@+id/assaae_ib_y2_plus1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep1"
                            />

                        <ImageButton
                            android:id="@+id/assaae_ib_y2_plus10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_frontstep10"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/assaae_iv_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp" 
                tools:layout_width="match_parent"
                tools:layout_height="50dp"
                tools:src="@drawable/rounded_small_corner_color_our_light"
                />

            <include
                layout = "@layout/layout_ssa_crop_condition_header"/>

            <include
                layout = "@layout/layout_ssa_crop_condition"/>

            <include
                layout = "@layout/layout_ssa_rbt_condition_header"/>

            <include
                layout = "@layout/layout_ssa_rbt_condition"/>


            <ImageView
                android:id="@+id/assaae_iv_image_rbt"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                tools:layout_width="match_parent"
                tools:layout_height="50dp"
                tools:src="@drawable/rounded_small_corner_color_our_light"
                />

            <TextView
                android:id="@+id/assaae_tv_ocr_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:text="OCR:"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/assaae_tv_ocr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:text="OCR:"
                android:gravity="center_horizontal"/>

            <Button
                android:id="@+id/assaae_bt_show_areas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/assacnd_ll_layout"
                android:text="Show satisfied conditions"
                android:onClick="showSatisfiedConditions"/>

            <ProgressBar
                android:id="@+id/assaae_pb_progress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                tools:visibility="visible"
                />

            <TextView
                android:id="@+id/assaae_tv_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:text="List conditions"
                android:gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>