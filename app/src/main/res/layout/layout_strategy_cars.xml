<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lsc_gl_grid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/lsc_rl_bld1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:background="@drawable/rounded_small_corner_light_gray"
            >

            <ImageView
                android:id="@+id/lsc_iv_bld1_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitCenter"
                android:gravity="center_horizontal|center_vertical"
                tools:src="@drawable/ic_bld1_black"
                />

            <SeekBar
                android:id="@+id/lsc_sb_bld1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lsc_iv_bld1_icon"
                android:layout_alignParentEnd="true"
                android:min="0"
                android:max="2"
                android:progress="1"
                android:visibility="invisible"
                tools:visibility="visible"
                android:thumb="@drawable/ic_car_empty_36dp"
                android:layout_weight="1" />
            
            
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lsc_rl_bld4"
            android:layout_width="match_parent"
