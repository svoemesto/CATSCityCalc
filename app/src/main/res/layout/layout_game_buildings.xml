        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:id="@+id/lgb_rl_blb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="1dp"
            android:background="@drawable/rounded_small_corner_light_gray"
            >

            <ImageView
                android:id="@+id/lgb_iv_blb_can_win_with_x2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_margin="1dp"
                tools:src="@drawable/ic_can_win_with_x2_true"/>

            <ImageView
                android:id="@+id/lgb_iv_blb_can_early_win_with_x2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_margin="1dp"
                android:layout_below="@id/lgb_iv_blb_can_win_with_x2"
                tools:src="@drawable/ic_can_early_win_with_x2_true"/>

            <ImageView
                android:id="@+id/lgb_iv_blb_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_toEndOf="@id/lgb_iv_blb_can_win_with_x2"
                android:gravity="center_horizontal|center_vertical"
                tools:src="@drawable/ic_blb_black"
                />

            <LinearLayout
                android:id="@+id/lgb_ll_first_blb"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_toEndOf="@id/lgb_iv_blb_icon">

                <ImageView
                    android:id="@+id/lgb_iv_blb_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:scaleType="fitStart"
                    tools:background="@drawable/rounded_small_corner_color_enemy_light"
                    />

                <TextView
                    android:id="@+id/lgb_tv_blb_x2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_weight="2"
                    android:textColor="#000000"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="100sp"
                    app:autoSizeStepGranularity="2sp"
                    tools:background="@drawable/rounded_small_corner_color_isx2"
                    tools:text="X2"
                    />

                <TextView
                    android:id="@+id/lgb_tv_blb_points"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_weight="2"
                    android:textColor="#ffffff"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="100sp"
                    app:autoSizeStepGranularity="2sp"
                    tools:background="@drawable/rounded_small_corner_color_our_light"
                    tools:text="+23"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lgb_ll_second_blb"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_below="@id/lgb_ll_first_blb"
                android:layout_toEndOf="@id/lgb_iv_blb_icon">

                <TextView
                    android:id="@+id/lgb_tv_blb_slots"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#000000"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="100sp"
                    app:autoSizeStepGranularity="2sp"
                    tools:text="21"
                    />

                <TextView
                    android:id="@+id/lgb_tv_blb_slots_our"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#4179d8"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="100sp"
                    app:autoSizeStepGranularity="2sp"
                    tools:text="21"
                    />

                <TextView
                    android:id="@+id/lgb_tv_blb_slots_empty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#5e6a84"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="100sp"
                    app:autoSizeStepGranularity="2sp"
                    tools:text="21"
                    />

                <TextView
                    android:id="@+id/lgb_tv_blb_slots_enemy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#ff6565"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="100sp"
                    app:autoSizeStepGranularity="2sp"
                    tools:text="21"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/lgb_iv_blb_progress"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:minHeight="20dp"
                android:scaleType="fitXY"
                android:layout_below="@id/lgb_iv_blb_icon"
                android:layout_marginTop="2dp"
                tools:background="@drawable/rounded_small_corner_color_empty_light"
                />

            <Button
                android:id="@+id/lgb_bt_blb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.0"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lgb_rl_brb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
