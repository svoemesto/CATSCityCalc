<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ua_ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_ua_unit_id"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ua_ad_banner"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical">

            <Button
                android:id="@+id/ua_bt_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "logout"
                android:onClick="logout"
                />

            <Button
                android:id="@+id/ua_bt_send_email_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="sendEmailVerification"
                android:text="send email verification" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/ua_ib_set_usernic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_keyboard_24"
                    android:onClick="setUserNIC"
                    />

                <TextView
                    android:id="@+id/ua_tv_usernic_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="@string/usernic_colon"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/ua_tv_usernic_label"
                    android:layout_alignBottom="@+id/ua_tv_usernic_label"
                    android:layout_toStartOf="@+id/ua_tv_usernic_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/ua_tv_usernic_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/ua_ib_set_usernic"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/ua_tv_username_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="@string/username_colon"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/ua_tv_username_label"
                    android:layout_alignBottom="@+id/ua_tv_username_label"
                    android:layout_toStartOf="@+id/ua_tv_username_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/ua_tv_username_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="end|center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/ua_tv_useremail_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="@string/useremail_colon"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/ua_tv_useremail_label"
                    android:layout_alignBottom="@+id/ua_tv_useremail_label"
                    android:layout_toStartOf="@+id/ua_tv_useremail_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/ua_tv_useremail_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="end|center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/ua_ib_copy_uuid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_file_copy_24"
                    android:onClick="copyUUIDtoClipboard"
                    />

                <TextView
                    android:id="@+id/ua_tv_uuid_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="@string/uuid_colon"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/ua_tv_uuid_label"
                    android:layout_alignBottom="@+id/ua_tv_uuid_label"
                    android:layout_toStartOf="@+id/ua_tv_uuid_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/ua_tv_uuid_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/ua_ib_copy_uuid"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>