<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".activities.StrategyActivity">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sa_ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_sa_unit_id"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/sa_ad_banner"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/sa_in_game_group"
                layout="@layout/layout_game_group"/>

            <include
                android:id="@+id/sa_in_strategy_cars"
                layout="@layout/layout_strategy_cars"/>

            <include
                android:id="@+id/sa_in_strategy_peoples"
                layout="@layout/layout_strategy_peoples"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/sa_iv_calc_timed_win"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"
                    tools:src="@drawable/ic_can_win_with_x2_true"
                    android:onClick="calcTimedWin"/>
                <ImageView
                    android:id="@+id/sa_iv_calc_timed_win_without_x2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"
                    tools:src="@drawable/ic_can_win_without_x2_true"
                    android:onClick="calcTimedWinWithoutx2"/>

                <ImageView
                    android:id="@+id/sa_iv_calc_early_win"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"
                    tools:src="@drawable/ic_can_early_win_with_x2_true"
                    android:onClick="calcEarlyWin"/>

                <ImageView
                    android:id="@+id/sa_iv_calc_early_win_without_x2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_margin="5dp"
                    tools:src="@drawable/ic_can_early_win_without_x2_true"
                    android:onClick="calcEarlyWinWithoutx2"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>