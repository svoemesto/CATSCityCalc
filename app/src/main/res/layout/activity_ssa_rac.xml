<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".ssa.SSA_Rule_Area_Condition_Activity">


        <LinearLayout
            android:id="@+id/assarace_ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/assarace_ib_get_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_keyboard_24"
                    android:onClick="setKey"
                    />

                <TextView
                    android:id="@+id/assarace_tv_key_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="RAC KEY:"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/assarace_tv_key_label"
                    android:layout_alignBottom="@+id/assarace_tv_key_label"
                    android:layout_toStartOf="@+id/assarace_tv_key_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/assarace_tv_key_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/assarace_ib_get_key"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/assarace_ib_get_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_keyboard_24"
                    android:onClick="setName"
                    />

                <TextView
                    android:id="@+id/assarace_tv_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="RAC name:"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/assarace_tv_name_label"
                    android:layout_alignBottom="@+id/assarace_tv_name_label"
                    android:layout_toStartOf="@+id/assarace_tv_name_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/assarace_tv_name_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jet_brains_mono_regular"
                    android:textSize="18sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/assarace_ib_get_name"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/assarace_ib_get_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_round_open_in_browser_24"
                    android:onClick="setArea"
                    />

                <TextView
                    android:id="@+id/assarace_tv_area_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="Area:"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/assarace_tv_area_label"
                    android:layout_alignBottom="@+id/assarace_tv_area_label"
                    android:layout_toStartOf="@+id/assarace_tv_area_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/assarace_tv_area_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jet_brains_mono_regular"
                    android:textSize="14sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/assarace_ib_get_area"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageButton
                    android:id="@+id/assarace_ib_get_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_round_open_in_browser_24"
                    android:onClick="setCondition"
                    />

                <TextView
                    android:id="@+id/assarace_tv_condition_label"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:text="Condition:"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toEndOf="@+id/assarace_tv_condition_label"
                    android:layout_alignBottom="@+id/assarace_tv_condition_label"
                    android:layout_toStartOf="@+id/assarace_tv_condition_value"
                    android:background="#c0c0c0"/>

                <TextView
                    android:id="@+id/assarace_tv_condition_value"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/jet_brains_mono_regular"
                    android:textSize="14sp"
                    android:gravity="end|center_vertical"
                    android:layout_toStartOf="@id/assarace_ib_get_condition"
                    android:layout_marginStart="10dp"
                    />

            </RelativeLayout>
            
        </LinearLayout>
    

</RelativeLayout>