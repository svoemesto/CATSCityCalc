<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/lssar_bt_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="invisible"
                tools:visibility="visible"
                android:src="@drawable/ic_baseline_delete_forever_24"/>


            <ImageButton
                android:id="@+id/lssar_bt_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_edit_24"/>



            <TextView
                android:id="@+id/lssar_tv_key_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lssar_bt_edit"
                android:layout_toStartOf="@id/lssar_bt_delete"
                android:layout_marginStart="10dp"
                android:textColor="@android:color/black"
                tools:text="RULE_KEY"
                />

            <TextView
                android:id="@+id/lssar_tv_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/lssar_bt_edit"
                android:layout_toStartOf="@id/lssar_bt_delete"
                android:layout_below="@id/lssar_tv_key_value"
                android:layout_marginStart="10dp"
                android:textSize="12sp"
                tools:text="Rule name"
                />



        </RelativeLayout>


    </LinearLayout>



</LinearLayout>
